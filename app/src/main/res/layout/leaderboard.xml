<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/leaderboardLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/reallyLightGrey"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:tag="@string/is_relative_layout">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/leaderboard_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:titleTextColor="@android:color/white">

        <TextView
            android:id="@+id/leaderboardTitleText"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Leaderboard"
            android:textColor="#000000" />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/difficulty_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easy - Normal Mode - Has 8" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:scrollbars="vertical">

        <TableLayout
            android:id="@+id/leaderboard_ui_table"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TableRow>
                <TextView android:text="Rank" android:paddingLeft="8px" android:paddingRight="8px" android:textSize="20dp"/>
                <TextView android:text="Name" android:paddingLeft="8px" android:paddingRight="8px" android:textSize="20dp"/>
                <TextView android:text="Time\n(seconds)" android:paddingLeft="8px" android:paddingRight="8px" android:textSize="20dp"/>
                <TextView android:text="Date Added" android:paddingLeft="8px" android:paddingRight="8px" android:textSize="20dp"/>
            </TableRow>
        </TableLayout>

    </ScrollView>
</LinearLayout>